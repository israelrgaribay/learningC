#include <iostream>
using namespace std;

int main() {
	int fifty, one_hundred, total;
	//initialize all variables to zero
	fifty = 0;
	one_hundred = 0;
	total = 0;
	//set 'fifty' equal to fifty and 'one_hundred' equal to 100
	fifty = 50;
	one_hundred = 100;
	//sum fifty and one_hundred and store in total
	total = fifty + one_hundred;
	return 0;
}
